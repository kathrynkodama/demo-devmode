<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 5.0"/>
    <engine>
        <property name="deploymentExportPath">target/artifacts</property>
    </engine>
    <container qualifier="incontainer" default="true">
        <configuration>
            <property name="wlpHome">${project.build.directory}/liberty/wlp</property>
            <property name="serverName">demo-devmode</property>
            <property name="httpPort">9080</property>
            <property name="appDeployTimeout">90</property>
            <property name="appUndeployTimeout">90</property>
            <property name="allowConnectingToRunningServer">true</property>
            <property name="javaVmArguments">-Dvalidation.provider=${validation.provider}</property>
        </configuration>
    </container>
</arquillian>